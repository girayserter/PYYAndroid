<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProjeBilgiActivity">

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/txt_projeadilbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Proje Adı: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_projeadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proje Adı"
                android:textColor="?attr/txtColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="5dp">


            <TextView
                android:id="@+id/txt_ilerlemedurumulbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="İlerleme Durumu: %"
                app:layout_constraintStart_toEndOf="@+id/txt_projedetay"
                app:layout_constraintTop_toTopOf="@+id/txt_projedetay" />

            <TextView
                android:id="@+id/txt_ilerlemedurumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="İlerleme Durumu"
                app:layout_constraintStart_toEndOf="@+id/txt_projedetay"
                app:layout_constraintTop_toTopOf="@+id/txt_projedetay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_projedetaylbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Proje Tanımı: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projeadi" />

            <TextView
                android:id="@+id/txt_projedetay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Detay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projeadi" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_projeyoneticilbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Proje Yöneticisi: "
                app:layout_constraintStart_toEndOf="@+id/txt_ilerlemedurumu"
                app:layout_constraintTop_toTopOf="@+id/txt_projedetay" />

            <TextView
                android:id="@+id/txt_projeyonetici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Proje Yöneticisi"
                app:layout_constraintStart_toEndOf="@+id/txt_ilerlemedurumu"
                app:layout_constraintTop_toTopOf="@+id/txt_projedetay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            <TextView
                android:id="@+id/txt_asama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Aşama: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projedetay" />

            <TextView
                android:id="@+id/txt_asamaadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/txtColor"
                android:text="Aşama Adı"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projedetay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout123"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_baslamatarihilbl"
                android:layout_width="wrap_content"
                android:textColor="?attr/txtColor"
                android:layout_height="wrap_content"
                android:text="Proje Başlama Tarihi: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projedetay" />

            <TextView
                android:id="@+id/txt_baslamatarihi"
                android:layout_width="wrap_content"
                android:textColor="?attr/txtColor"
                android:layout_height="wrap_content"
                android:text="Başlama Tarihi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_projedetay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_bitistarihilbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proje Bitiş Tarihi:"
                android:textColor="?attr/txtColor"
                app:layout_constraintStart_toEndOf="@+id/txt_baslamatarihi"
                app:layout_constraintTop_toBottomOf="@+id/txt_ilerlemedurumu" />

            <TextView
                android:id="@+id/txt_bitistarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitiş Tarihi"
                android:textColor="?attr/txtColor"
                app:layout_constraintStart_toEndOf="@+id/txt_baslamatarihi"
                app:layout_constraintTop_toBottomOf="@+id/txt_ilerlemedurumu" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Görev Listeleri"
            android:textSize="25dp"
            android:textColor="?attr/txtColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_gorevlisteleri"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_yenigorevlistesi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btn_projeduzenle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projeyi Düzenle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="?attr/buttonBg"
            android:textColor="?attr/buttonText"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_yenigorevlistesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yeni Görev Listesi"
            app:layout_constraintBottom_toTopOf="@+id/btn_projeduzenle"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="?attr/buttonBg"
            android:textColor="?attr/buttonText"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>