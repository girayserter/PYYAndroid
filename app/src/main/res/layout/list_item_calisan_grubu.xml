<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="grup"
            type="com.girayserter.pyyandroid.models.CalisanGrubu" />
    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/calisangrubu_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black"
            android:gravity="center">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_personel"/>
            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(grup.id)}"
                android:textSize="12dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_isim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{grup.grup_adi}"
                android:textSize="12dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_soyisim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{grup.grup_aciklamasi}"
                android:textSize="12dp"
                android:textColor="@color/white" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>