<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PYYAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sttsBarColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/sttsBarColor</item>
        <!-- Cardview colors. -->
        <item name="cardViewBg">@color/item_light_bg</item>
        <item name="cardViewTxt">@color/item_light_text</item>
        <!--Button colors.-->
        <item name="buttonBg">@color/item_light_bg</item>
        <item name="buttonText">@color/item_light_text</item>
        <!--Textview colors.-->
        <item name="txtColor">@color/txt_light_text</item>
    </style>
</resources>